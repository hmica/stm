{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:ratatui.rs)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.rs)",
      "Bash(cargo check:*)",
      "Bash(echo:*)",
      "Bash(export PATH=\"$HOME/.cargo/bin:/usr/local/bin:/usr/bin:/bin:$PATH\")",
      "Bash(cargo --version:*)",
      "Bash(source:*)",
      "Bash(brew install:*)",
      "Bash(rustup-init:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "Bash(git tag:*)",
      "Bash(cargo tree:*)",
      "Bash(bash -c 'source ~/.cargo/env && cargo clippy -- -D warnings 2>&1 && cargo test 2>&1 | tail -20')",
      "Bash(bash -c 'source ~/.cargo/env && cargo clippy -- -D warnings 2>&1 && cargo test --quiet 2>&1')"
    ]
  }
}
